events {
    worker_connections 1024;
}
http {
    server {
        listen 80;
        listen [::]:80;
        server_name ${HOST};

        location ~ /.well-known/acme-challenge {
            allow all;
            root /var/www/html;
        }

        location / {
            return 200 'Trying to update SSL certificate...';
        }
    }
}
